<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.CartBuyFragment"
    android:orientation="vertical"
    android:background="#D98A72">
    <LinearLayout
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/txt_current_orders"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:text="Đơn hàng hiện tại"
                android:gravity="bottom"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"></TextView>
            <TextView
                android:id="@+id/txt_history_orders"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="bottom"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="Lịch sử"
                android:layout_weight="1"></TextView>
        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_oder"
        android:layout_width="match_parent"
        android:background="@drawable/top_rounded_card"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>