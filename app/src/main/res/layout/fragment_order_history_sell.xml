<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.OrderHistorySellFragment">

    <!-- TODO: Update blank fragment layout -->
    <HorizontalScrollView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_order_confirmation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_xam_search_choose"
                android:gravity="center"
                android:padding="10dp"
                android:text="Chờ xác nhận"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_order_in_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_xam_search_choose"
                android:gravity="center"
                android:padding="10dp"
                android:text="Đang giao"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_order_delivered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_xam_search_choose"
                android:gravity="center"
                android:padding="10dp"
                android:text="Thành công"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_order_cancelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_xam_search_choose"
                android:gravity="center"
                android:padding="10dp"
                android:text="Đơn bị hủy"
                android:textSize="14sp" />

        </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_lits_order_history"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>