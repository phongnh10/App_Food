<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_arrow_back_ios_24"/>


    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin cá nhân"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Họ và tên "
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bogoc_edittext"
        android:hint="Nhập họ và tên của bạn"
        android:padding="15dp"
        android:textSize="18sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLength="25"
        android:scrollHorizontally="true"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số CCCD"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/edtaId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập CCCD"
        android:padding="15dp"
        android:textSize="18sp"
        android:background="@drawable/bogoc_edittext"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLength="12"
        android:scrollHorizontally="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số điện thoại"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số điện thoại của bạn"
        android:padding="15dp"
        android:textSize="18sp"
        android:background="@drawable/bogoc_edittext"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLength="12"
        android:scrollHorizontally="true"/>
    <Button
        android:id="@+id/btnLoginm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cập nhật thông tin"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/orange"/>
</LinearLayout>