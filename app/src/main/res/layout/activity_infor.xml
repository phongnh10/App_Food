<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#DBE2EA">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_arrow_back_ios_24"/>


    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin cá nhân"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#323232"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Họ và tên "
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_boder_right_lefrt"
        android:hint="Nhập họ và tên của bạn"
        android:paddingHorizontal="25dp"
        android:textSize="20dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLength="25"
        android:scrollHorizontally="true"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số CCCD"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtaId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập CCCD"
        android:paddingHorizontal="25dp"
        android:textSize="20dp"
        android:background="@drawable/custom_boder_right_lefrt"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLength="12"
        android:scrollHorizontally="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số điện thoại"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số điện thoại của bạn"
        android:paddingHorizontal="25dp"
        android:textSize="20dp"
        android:background="@drawable/custom_boder_right_lefrt"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLength="12"
        android:scrollHorizontally="true"/>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cập nhật thông tin"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#3D8840" />
</LinearLayout>