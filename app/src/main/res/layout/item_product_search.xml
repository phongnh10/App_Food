<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_item_product_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/img_product_search"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/image_goivit" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">


        <TextView
            android:id="@+id/txt_name_product_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bánh tráng trộn"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_sold_shop_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200 lượt bán"
                android:textColor="#757575"
                android:textSize="12dp"
                android:layout_weight="3">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | "
                android:textColor="#757575"
                android:textSize="12dp"
                android:layout_weight="3">
            </TextView>
            <TextView
                android:id="@+id/txt_name_shop_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nino Shop"
                android:textColor="#757575"
                android:textSize="12dp"
                android:layout_weight="3">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_price_product_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FF5722"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="đ 10.000"></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:text="4.5"
                    android:textSize="15dp"
                    android:textColor="#FFC107"
                    ></TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_gravity="center|right"
                    android:src="@drawable/ic_star_rate_24"></ImageView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>