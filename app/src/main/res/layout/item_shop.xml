<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_item_shop"
    android:layout_width="140dp"
    android:layout_height="170dp"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/custom_price">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/img_image_shop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/image_shop_default">
        </ImageView>
    </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txt_name_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:text="Name Shop"></TextView>
    <TextView
        android:id="@+id/txt_sold_shopppp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:text="Đã bán: "></TextView>

</LinearLayout>