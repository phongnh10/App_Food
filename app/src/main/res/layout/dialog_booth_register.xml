<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp">
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Đăng ký Shop"
        android:textColor="@color/selected_color"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>
    <EditText
        android:id="@+id/edt_name_shop_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên Shop"
        android:textSize="18sp"
        android:padding="15dp"
        android:textColor="@color/black"
        android:background="@drawable/bogoc_edittext"
        android:layout_marginBottom="12dp"/>
    <EditText
        android:id="@+id/edt_address_shop_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="15dp"
        android:hint="Địa chỉ bán hàng"
        android:background="@drawable/bogoc_edittext"
        android:layout_marginBottom="12dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Điều khoản  "
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="(Kéo xuống để đọc)"
            android:textColor="@color/black">
        </TextView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_register_booth"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/bg_dieukhoan"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terms_and_conditions"
            android:textColor="@color/black"
            android:textSize="18sp">
        </TextView>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <CheckBox
            android:id="@+id/cb_booth_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Tôi đã đọc và chấp nhận với Điều khoản"
            android:textColor="@color/black"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_register_booth2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:backgroundTint="@color/orange"
        android:layout_marginHorizontal="80dp"
        android:text="Đăng ký Shop">
    </Button>
</LinearLayout>