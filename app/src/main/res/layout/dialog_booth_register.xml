<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_new"
    android:padding="20dp">
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Đăng ký Shop"
        android:textColor="@color/selected_color"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bogoc_edittext"
        android:orientation="horizontal"
        android:layout_marginBottom="18sp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            android:src="@drawable/baseline_add_shop_24" />
        <EditText
            android:id="@+id/edt_name_shop_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên Shop của bạn"
            android:textColorHint="#8A8A8A"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:textColor="@color/black"
            android:background="@null"
            android:maxLength="40"
            android:scrollHorizontally="true"
            android:singleLine="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bogoc_edittext"
        android:orientation="horizontal"
        android:layout_marginBottom="10sp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            android:src="@drawable/baseline_location_xam" />
        <EditText
            android:id="@+id/edt_address_shop_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:textColorHint="#8A8A8A"
            android:hint="Địa chỉ Shop (Tầng ..., tòa ...)"
            android:background="@null"
            android:maxLength="40"
            android:scrollHorizontally="true"
            android:singleLine="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Điều khoản  "
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="(Kéo xuống để đọc)"
            android:textColor="@color/black">
        </TextView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_register_booth"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/bg_dieukhoan"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terms_and_conditions"
            android:textColor="@color/black"
            android:textSize="16sp">
        </TextView>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <CheckBox
            android:id="@+id/cb_booth_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Tôi đã đọc và chấp nhận với Điều khoản"
            android:textColor="@color/black"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_register_booth2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:backgroundTint="@color/orange"
        android:text="Đăng ký Shop"
        android:layout_gravity="center">
    </Button>
</LinearLayout>