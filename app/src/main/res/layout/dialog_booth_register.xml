<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="560dp"
    android:orientation="vertical"
    android:background="#DBE2EA">
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:gravity="center"
        android:text="Booth Register"
        android:textColor="@color/selected_color"
        android:textSize="22dp"
        android:textStyle="bold"></TextView>
    <EditText
        android:id="@+id/edt_name_shop_register"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Name Shop"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black">
    </EditText>
    <EditText
        android:id="@+id/edt_address_shop_register"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Address Shop"
        android:textColorHint="@color/black"
        android:layout_marginHorizontal="20dp">
    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Điều khoản"
        android:textColor="@color/black">
    </TextView>
    <ScrollView
        android:id="@+id/sv_register_booth"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terms_and_conditions"
            android:textColor="@color/black">
        </TextView>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_gravity="center">

        <CheckBox
            android:id="@+id/cb_booth_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Agree"
            android:textColor="@color/black"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_register_booth2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="120dp"
        android:text="Register">
    </Button>
</LinearLayout>