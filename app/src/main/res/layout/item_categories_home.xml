<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_categories"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="80dp"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/img_categories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/image_banhtrang"></ImageView>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/txt_categories"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Bánh Tráng Trộn"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:layout_weight="1"
            android:layout_gravity="center"></ImageView>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginHorizontal="10dp"></ImageView>

</LinearLayout>