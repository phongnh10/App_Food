<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".StarActivity"
    android:id="@+id/activityStar"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginTop="150dp"
            android:layout_gravity="center"
            android:src="@mipmap/logof" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="App đặt món ăn "
            android:textColor="@color/orange"
            android:textSize="16dp"
            android:layout_marginTop="-50dp"
            android:layout_marginHorizontal="20dp"
            android:textStyle="italic"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="dành cho giảng viên và sinh viên FPL"
            android:textColor="@color/orange"
            android:textSize="16dp"
            android:layout_marginHorizontal="20dp"
            android:textStyle="italic"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_marginHorizontal="20dp"
        android:paddingBottom="20dp">


        <Button
            android:id="@+id/btnSignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:padding="12dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#F5643A" />
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textColor="#212020"
            android:textSize="18dp"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#E3E3E3" />

        <TextView
            android:id="@+id/txt_terms_and_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#000000"/>




    </LinearLayout>

</LinearLayout>
