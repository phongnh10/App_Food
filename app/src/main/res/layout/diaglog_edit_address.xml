<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/custom_dialog_background"
        android:elevation="8dp"
        android:layout_margin="16dp">

        <EditText
            android:id="@+id/txt_name_edit_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/custom_edittext_background"
            android:hint="Nhập vào tên của bạn"
            android:padding="16dp"
            android:textSize="16sp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary_text"/>

        <EditText
            android:id="@+id/txt_phone_edit_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/custom_edittext_background"
            android:hint="Nhập vào số điện thoại"
            android:padding="16dp"
            android:textSize="16sp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary_text"/>

        <EditText
            android:id="@+id/txt_address_edit_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/custom_edittext_background"
            android:hint="Nhập vào địa chỉ"
            android:padding="16dp"
            android:textSize="16sp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_cancel_edit_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button_cancel_background"
                android:padding="12dp"
                android:text="Quay Lại"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginRight="40dp"/>

            <TextView
                android:id="@+id/txt_update_edit_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button_background"
                android:padding="12dp"
                android:text="Cập nhật"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>