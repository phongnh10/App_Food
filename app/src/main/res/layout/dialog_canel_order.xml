<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Bạn muốn hủy đơn hàng?"
        android:textColor="@color/orange"
        android:textSize="16sp"

        android:gravity="center"
        android:layout_marginBottom="10dp"
        ></TextView>
    <EditText
        android:id="@+id/txt_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:hint="Ghi lý do huỷ đơn hàng ở đây."
        android:background="@drawable/bg_dangky_edittext"
        android:layout_marginBottom="10dp"
        android:inputType="textMultiLine"
        android:textSize="16sp"
        android:maxLines="10"
        android:minLines="3"
        android:scrollbars="vertical"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_canel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_button_cancel_background"
            android:gravity="center"
            android:padding="10dp"
            android:text="Trở về"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txt_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/custom_button_background"
            android:text="Đồng ý"/>
    </LinearLayout>

</LinearLayout>