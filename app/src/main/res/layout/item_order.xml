<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout_order"
    android:layout_width="match_parent"
    android:layout_height="249dp"
    android:background="@drawable/foreground_gradient"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_shop_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shop Cơm Mẹ Nga"
                android:textSize="12dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/txt_status_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Đang xác nhận"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_price"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_id_order"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Đơn hàng: 11"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:id="@+id/txt_name_user_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Người Mua: Hồng Phong"
                    android:textSize="15dp"></TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="100dp"
                    >
                    <ImageView
                        android:id="@+id/img_image_order"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_background"></ImageView>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_name_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Bánh Tráng Cơm Trưa"
                        android:textSize="15dp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/txt_quantity_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Sl: 80"
                            android:textSize="15dp"></TextView>

                        <TextView
                            android:id="@+id/txt_total_price_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Thành tiền: 80.000 VND"
                            android:textSize="15dp"></TextView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_date_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="right"
                        android:text="Ngày Đặt: 22/22/2222."
                        android:textSize="15dp"
                        android:textStyle="italic"></TextView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_canel_order"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/custom_edit_booth_canel"
                    android:gravity="center"
                    android:text="Huỷ"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"></Button>


                <Button
                    android:id="@+id/btn_confirm_order"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/custom_edit_user_admin"
                    android:gravity="center"
                    android:text="Đã Nhận"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"></Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:id="@+id/txt_note_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Lý do huỷ:"
                    android:textSize="15dp"
                    android:textStyle="italic|bold"></TextView>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/black"></ImageView>
</LinearLayout>
