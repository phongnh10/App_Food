<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">

                <Button
                    android:id="@+id/btn_canel_order"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/baseline_no_24"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"></Button>
                <Button
                    android:id="@+id/btn_confirm_order"
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/baseline_check_24"
                    android:gravity="center"
                    android:text="Đã Nhận"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"></Button>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="100dp"
                    android:layout_margin="1dp">
                    <ImageView
                        android:id="@+id/img_image_order"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_background"></ImageView>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/txt_shop_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shop Cơm Mẹ Nga"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>
                    <TextView
                        android:id="@+id/txt_id_order"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Đơn hàng: 11"
                        android:textSize="16sp"></TextView>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EAEAEA"
                android:layout_marginTop="5dp"></ImageView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp">

                <TextView
                    android:id="@+id/txt_quantity_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sl: 80"
                    android:textStyle="bold"
                    android:textColor="@color/orange"
                    android:textSize="16sp"></TextView>

                <TextView
                    android:id="@+id/txt_total_price_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Thành tiền: 80.000 VND"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="16sp"></TextView>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EAEAEA"></ImageView>
            <TextView
                android:id="@+id/txt_name_user_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người Mua: Hồng Phong"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginVertical="5dp"></TextView>

            <TextView
                android:id="@+id/txt_date_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày Đặt: 22/22/2222"
                android:textSize="16sp"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_note_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lý do huỷ:"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"></TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_status_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="Đang xác nhận"
                android:textColor="#009688"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
